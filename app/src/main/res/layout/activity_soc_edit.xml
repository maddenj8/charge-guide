<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcuproject.jmadden.chargeguide.socEdit">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:fillViewport="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/soc"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="252dp"
            android:autoSizeMaxTextSize="18dp"
            android:autoSizeMinTextSize="18dp"
            android:text="Battery State of Charge:"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="82dp"
            android:layout_height="90dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/heading_charger"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="Home"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/socInt"
            android:layout_width="42dp"
            android:layout_height="37dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="160dp"
            android:autoSizeMaxTextSize="14dp"
            android:autoSizeMinTextSize="14dp"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:text="100"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/soc"
            app:layout_constraintTop_toBottomOf="@+id/heading_charger" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

</android.support.constraint.ConstraintLayout>
