<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcuproject.jmadden.chargeguide.help"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="7dp">

            <TextView
                android:id="@+id/helpWelcome"
                android:layout_width="272dp"
                android:layout_height="54dp"
                android:layout_marginBottom="708dp"
                android:layout_marginTop="8dp"
                android:text="@string/ev_help_welcome"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.13"
                tools:text="@string/ev_help_welcome" />

            <TextView
                android:id="@+id/terms"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="@string/terms"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_green"
                tools:text="@string/terms" />

            <ImageView
                android:id="@+id/green_charger"
                android:layout_width="76dp"
                android:layout_height="68dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helpWelcome"
                app:srcCompat="@drawable/large_blue_charger" />


            <ImageView
                android:id="@+id/green_charger2"
                android:layout_width="76dp"
                android:layout_height="68dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="52dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helpWelcome"
                app:srcCompat="@drawable/large_green_charger" />

            <ImageView
                android:id="@+id/red_charger"
                android:layout_width="76dp"
                android:layout_height="68dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.972"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helpWelcome"
                app:srcCompat="@drawable/large_red_charger" />

            <ImageView
                android:id="@+id/gray_charger"
                android:layout_width="76dp"
                android:layout_height="68dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helpWelcome"
                app:srcCompat="@drawable/large_gray_charger" />

            <TextView
                android:id="@+id/about_green"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Available"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/green_charger2" />


            <TextView
                android:id="@+id/about_gray"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:text="Out of contact"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/red_charger" />

            <TextView
                android:id="@+id/about_Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Occupied"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.31"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/green_charger" />

            <TextView
                android:id="@+id/about_red2"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Out of Service"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.63"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gray_charger" />

            <ImageView
                android:id="@+id/chademoPlugImage"
                android:layout_width="146dp"
                android:layout_height="95dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="92dp"
                android:paddingTop="0dp"
                android:src="@drawable/chademo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/terms" />

            <TextView
                android:id="@+id/chademoPlug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="140dp"
                android:text="Chademo Plug"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.742"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/terms"
                tools:text="Chademo Plug" />

            <ImageView
                android:id="@+id/ccsPlugImage"
                android:layout_width="135dp"
                android:layout_height="92dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="56dp"
                android:padding="0dp"
                android:paddingTop="0dp"
                android:src="@drawable/ccs_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chademoPlugImage" />

            <ImageView
                android:id="@+id/type2"
                android:layout_width="146dp"
                android:layout_height="100dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="56dp"
                android:padding="0dp"
                android:paddingTop="0dp"
                android:src="@drawable/type2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ccsPlugImage" />


            <TextView
                android:id="@+id/ac43Plug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="292dp"
                android:paddingLeft="0dp"
                android:text="CCS / Type 2 cable "
                app:layout_constraintBottom_toBottomOf="@+id/ccsPlugImage"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/terms"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/ac43Plug2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="0dp"
                android:text="Type 2 Cable"
                app:layout_constraintBottom_toBottomOf="@+id/type2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/type2"
                tools:text=" Type 2 Cable " />

            <TextView
                android:id="@+id/helpHeading"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Welcome to Charge Guide"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/helpWelcome"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.7" />

            <TextView
                android:id="@+id/termsHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Common Terms"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/terms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_Blue"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/statusIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Status Icons"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/green_charger2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helpWelcome"
                app:layout_constraintVertical_bias="0.45" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Charger Types"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/chademoPlugImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/terms"
                app:layout_constraintVertical_bias="0.6" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
